{% extends 'base.html.twig' %}
{% block title %}Article Details {% endblock %}
{% block body %}


<div class="container justify-content-center mt-5 bg-light">

    <div class="row p-3">
        <div class="col-md-6">
            Title
        </div>
        <div class="col-md-6">
            {{ article.name }}
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-6">
           Crée le
        </div>
        <div class="col-md-6">
            <label class="badge-dark pl-2 pr-2 rounded"> {{ article.createdAt |date('d/m/y') }}</label>  &nbsp&nbsp à &nbsp&nbsp
            <label class="badge-dark pl-2 pr-2 rounded">{{ article.createdAt |date('H:i') }}</label>
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-6">
            Categorie
        </div>
        <div class="col-md-6">
            {{ article.category.name }}
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-6">
            Auteur
        </div>
        <div class="col-md-6">
            {{ article.author }}
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-6">
            Description
        </div>
        <div class="col-md-6">
            {{ article.content }}
        </div>
    </div>

     <div class="row p-3">
            <div class="col-md-12">
                <a href="{{ path('edit_article', { 'id':article.id }) }}" class="btn btn-primary">&nbsp;&nbsp;&nbsp;&nbsp; Edit &nbsp;&nbsp;&nbsp;&nbsp;</a>
                <form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-outline-danger m-5">&nbsp;&nbsp;Delete&nbsp;&nbsp;</button>
                </form>
            </div>
        </div>
</div>

    <style>
        form{
            display: inline-block;
        }
    </style>
{% endblock %}



