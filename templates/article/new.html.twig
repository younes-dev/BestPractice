
{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">


        <h1 class="text-center m-5">Creation d'un article</h1>

        {{ form_start(form) }}

        {{ form_errors(form.name) }}
        {{ form_row(form.name,{'attr': {'Placeholder': 'titre de l\'article'}}) }}

        {{ form_errors(form.author) }}
        {{ form_row(form.author,{'attr': {'Placeholder': 'auteur de l\'article'}}) }}

        {{ form_row(form.category) }}

        {{ form_errors(form.content) }}
        {{ form_row(form.content,{'attr': {'Placeholder': 'contenue de l\'article'}}) }}
            <div class="text-center">
                <button type="submit" class="btn btn-success align-items-center w-100"> Ajouter</button>
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
