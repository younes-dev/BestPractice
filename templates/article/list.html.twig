{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}


{% block body %}

    <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />

    <span class="badge-light p-3 rounded-pill float-right text-black-50 mt-3"><h4> Aujourd'huit &nbsp;&nbsp;:&nbsp;&nbsp;&nbsp; {{ DateNow }}</h4></span>
    <br>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <section class="badge-info p-3 rounded-pill float-left text-black-50  mt-lg-n5"><h4>Total
                        Articles: {{ totalArticle }}</h4></section>
            </div>

        </div>

        <div class="row">
            {% for article in articles %}
                <div class="articles col-md-6">
                    <article class="article">
                        <h2>{{ article.name }}</h2>
                        <div class="metadata mb-3">
                            Écrit le
                            <span class="badge-warning rounded pr-1 pl-1">{{ article.createdAt |date('d/m/y') }} à {{ article.createdAt |date('H:i') }}</span>
                            {# <span class="badge-warning rounded pr-1 pl-1">{{ article.createdAt |date('d/m/y') }} à {{ article.createdAt |date('H:i') }}</span> #}
                            dans la catégorie
                            <span class="badge-info rounded pr-1 pl-1"> {{ article.category.name }}  </span>
                        </div>
                        <p>
                            {{ article.content | raw }}
                        </p>
                        <p class="fixedBtn">
                            <a href="{{ path('show_article', { 'id':article.id }) }}" class="btn btn-primary mt-lg-5">Lire
                                la suite</a>
                        </p>
                    </article>
                </div>
            {% endfor %}
        </div>

        <div class="navigation fixed">
            {{ knp_pagination_render(articles) }}
        </div>

    </div>

{% endblock %}
