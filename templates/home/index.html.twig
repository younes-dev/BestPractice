{% extends 'base.html.twig' %}

{% block title %} Home page{% endblock %}

{% block body %}

    <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />

    <div class="container">
        <div class="jumbotron">
        <h1 class="display-3">Home, Page</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{ path('list_article') }}" role="button">List Des Articles</a>
        </p>
        </div>

        {#######################################################}
        <!-- Page Content -->
        <div class="container">

            <div class="row">
                <!-- Blog Entries Column -->
                <div class="col-md-8">
                    {% for article in articles %}
                    <!-- Blog Post -->
                    <div class="card mb-4">
                        <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.name }}</h2>
                            <p class="card-text">
                                {{ article.content | raw }}
                            </p>
                            <a href="#" class="btn btn-primary">Read More &rarr;</a>
                        </div>
                        <div class="card-footer text-muted">
                            Posted on
                            <span class="badge-info rounded pr-1 pl-1">{{ article.createdAt |date('d/m/y') }} Ã  {{ article.createdAt |date('H:i') }}</span>
                            By
                            <span class="badge-info rounded pr-1 pl-1"> {{ article.author }}</span>
                        </div>
                    </div>
                    {% endfor %}


                    <!-- Pagination -->
                    <div class="navigation fixed">
                        {{ knp_pagination_render(articles) }}
                    </div>
                </div>

                <!-- Sidebar Widgets Column -->
                <div class="col-md-4">

                    <!-- Search Widget -->
                    <div class="card my-5 m-lg-n1" style="margin-top: 30px;!important;">
                        <h5 class="card-header">Search</h5>
                        <div class="card-body">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-append">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
                            </div>
                        </div>
                    </div>

                    <!-- Categories Widget -->
                    <div class="card my-5">
                        <h5 class="card-header">Categories</h5>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <a href="#">Web Design</a>
                                        </li>
                                        <li>
                                            <a href="#">HTML</a>
                                        </li>
                                        <li>
                                            <a href="#">Freebies</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <a href="#">JavaScript</a>
                                        </li>
                                        <li>
                                            <a href="#">CSS</a>
                                        </li>
                                        <li>
                                            <a href="#">Tutorials</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Side Widget -->
                    <div class="card my-5">
                        <h5 class="card-header">Side Widget</h5>
                        <div class="card-body">
                            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

    </div>
{% endblock %}


