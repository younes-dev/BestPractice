    {{ form_start(formUser) }}
    <div class="container register-form mt-lg-1">
        <div class="row mb-0">
            <div class="col-md-12">
                {{ form_errors(formUser) }}
            </div>
        </div>
        <div class="form">
            <div class="note">
                <p class="shadow">This is a simpleRegister Form made using Boostrap.</p>
            </div>
            <div class="form-content pd">
                <div class="row mb-0">
                    <div class="col-md-5">
                        {{ macro.formUserChildren(formUser.children[0:3]) }}
                    </div>
                    <hr class="vr shadow-lg mb-5 rounded">

                    <div class="col-md-5">
                        {{ macro.formUserChildren(formUser.children[3:3]) }}
                    </div>
                </div>
                <div class="form-group note2 rounded-circle" id="hover">
                    <button type="submit" class="btnSubmit w-100 align-items-lg-center note2" id="hover">Submit</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(formUser) }}


