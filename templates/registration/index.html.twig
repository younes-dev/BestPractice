{% extends 'base.html.twig' %}
{% import "macro/registeration_macro.html.twig" as macro %}
{% block title %}Registration!{% endblock %}
{% block body %}

 <link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />

